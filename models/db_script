SELECT "Category"."Id" AS "Category_Id", "Category"."Title" AS "Category_Title", "Category"."CreatedDate" AS "Category_CreatedDate", "Category"."ChangedDate" AS "Category_ChangedDate", "Category"."IsDeleted" AS "Category_IsDeleted", "Category"."CreatedBy" AS "Category_CreatedBy", "Category"."ChangedBy" AS "Category_ChangedBy"
FROM "Category";
select * from Speaker
-- Step 1: Create a new table with the desired constraints
CREATE TABLE Speaker_new (
    Id INTEGER PRIMARY KEY,
    FirstName VARCHAR(100) NOT NULL,
    LastName VARCHAR(100) NOT NULL,
    Bio VARCHAR(255),
    Email VARCHAR(100) NOT NULL UNIQUE,
    Phone VARCHAR(20),
    PhotoUrl VARCHAR(255),
    CreatedDate DATETIME DEFAULT CURRENT_TIMESTAMP,
    ChangedDate DATETIME DEFAULT CURRENT_TIMESTAMP,
    CreatedBy INTEGER DEFAULT 1,
    ChangedBy INTEGER DEFAULT 1,
    IsDeleted BOOLEAN DEFAULT FALSE
);

-- Step 2: Copy data from the old table to the new one
INSERT INTO Speaker_new (Id, FirstName, LastName, Bio, Email, Phone, PhotoUrl, CreatedDate, ChangedDate, CreatedBy, ChangedBy, IsDeleted)
SELECT Id, FirstName, LastName, Bio, Id, 0, null, CreatedDate, ChangedDate, CreatedBy, ChangedBy, IsDeleted
FROM Speaker;

-- Step 3: Drop the old table
DROP TABLE Speaker;

-- Step 4: Rename the new table
ALTER TABLE Speaker_new RENAME TO Speaker;

select  * from Speaker_new